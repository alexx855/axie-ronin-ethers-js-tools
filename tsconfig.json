{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
  },
  "include": [
    "lib/**/*.ts",
    "lib/**/*.json",
    "index.ts",
  ],
  "exclude": [
    "node_modules",
    "hardhat.config.ts",
    "scripts",
    "test"
  ],
}
